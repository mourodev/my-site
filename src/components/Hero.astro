---
import { Image } from "astro:assets";
import profile from "../assets/profile2.jpg";
import CopyEmail from "./CopyEmail.astro";
---

<div class="container">
  <div class="profile">
    <div class="profile-info">
      <Image
        src={profile}
        alt="Foto de perfil de Mouro"
        class="profile-pic"
        width={100}
        height={100}
        format="avif"
        loading={"eager"}
      />

      <div class="info">
        <h1 class="name">Mouro</h1>
        <p class="description">Desenvolvedor Frontend </p>
      </div>
    </div>

    <CopyEmail />
  </div>
</div>

<style>
  .profile {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .profile-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-grow: 1;
    margin-block-end: 1rem;
  }

  .profile-pic {
    border-radius: 50%;
  }

  .name {
    font-size: var(--font-size-lg);
    font-weight: 700;
  }

  .description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }
</style>
